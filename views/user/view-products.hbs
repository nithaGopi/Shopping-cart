


<section>
<div class="container mt-5">
<div class="row">

	{{#each products}}
	<div class="col-md-3  ">
	<div class="card m-3" style="width: 15rem;">
	<img style="width: 200px;height: 300px;object-fit: cover;" class="card-img-top" src="product-images/{{this._id}}.jpg" alt="Card image cap">

	<div class="card-body">
	<h5 class="card-title">{{this.name}}</h5>
	{{!--<h5 class="card-title">{{this.category}}</h5>--}}
	<h5 class="card-title">{{this.price}}</h5>
	{{!--<p class="card-text">{{this.description}}</p>--}}
	<a href="#" class="btn btn-primary">Add to cart</a>
	</div>
	</div>
	</div>

	{{/each}}


</div>
</div>              
</section>

	